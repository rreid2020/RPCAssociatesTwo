{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "bundler",
    "composite": false,
    "paths": {
      "@shared/*": ["../../packages/shared/src/*"],
      "@storage/*": ["../../packages/storage/src/*"]
